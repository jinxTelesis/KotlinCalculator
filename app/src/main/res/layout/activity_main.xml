<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:padding="10pt">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:text="0" android:paddingTop="20pt" android:background="@color/gray"
            android:textSize="40sp" android:textColor="@color/white" android:layout_weight="1"
            android:layout_marginTop="10pt" android:id="@+id/etShowNumbers"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:textSize="18sp"
                    android:id="@+id/button17" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="@color/whiteback" android:layout_weight="1"/>
            <Button
                    android:text="+/-"
                    android:textSize="18sp"
                    android:id="@+id/buplusminus" android:layout_height="30pt" android:background="@color/whiteback"
                    android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="%"
                    android:textSize="18sp"
                    android:id="@+id/button11" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1"/>
            <Button
                    android:text="/"
                    android:textSize="18sp"
                    android:id="@+id/button12" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#F79231" android:textColor="#ffffff" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:textSize="18sp"
                    android:id="@+id/bu7" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="8"
                    android:textSize="18sp"
                    android:id="@+id/bu8" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="9"
                    android:textSize="18sp"
                    android:id="@+id/bu9" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="x"
                    android:textSize="18sp"
                    android:id="@+id/button13" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#F79231" android:textColor="#ffffff" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:textSize="18sp"
                    android:id="@+id/bu4" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="5"
                    android:textSize="18sp"
                    android:id="@+id/bu5" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="6"
                    android:textSize="18sp"
                    android:id="@+id/bu6" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="-"
                    android:textSize="18sp"
                    android:id="@+id/button8" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#F79231" android:textColor="#ffffff" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:textSize="18sp"
                    android:id="@+id/bu1" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="2"
                    android:textSize="18sp"
                    android:id="@+id/bu2" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="3"
                    android:textSize="18sp"
                    android:id="@+id/bu3" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#D6D6D6" android:layout_weight="1" android:onClick="buNumberEvent"/>
            <Button
                    android:text="+"
                    android:textSize="18sp"
                    android:id="@+id/button19" android:layout_width="30pt" android:layout_height="30pt"
                    android:background="#F79231" android:textColor="#ffffff" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/bu0" android:layout_height="30pt"
                android:layout_width="60pt" android:background="#D6D6D6" android:onClick="buNumberEvent"/>
        <Button
                android:text="."
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/buDot"
                android:layout_width="30pt" android:layout_height="30pt" android:background="#D6D6D6"/>
        <Button
                android:text="="
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_height="30pt" android:id="@+id/button4"
                android:layout_width="30pt" android:background="#F79231" android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>
